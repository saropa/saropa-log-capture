{
  "name": "saropa-log-capture",
  "displayName": "Saropa Log Capture",
  "description": "Automatically capture VS Code Debug Console output to persistent log files",
  "version": "0.1.3",
  "license": "MIT",
  "publisher": "saropa",
  "repository": {
    "type": "git",
    "url": "https://github.com/saropa/saropa-log-capture"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Debuggers",
    "Visualization"
  ],
  "keywords": [
    "debug",
    "log",
    "capture",
    "console",
    "output",
    "save",
    "persist",
    "trace",
    "debug console",
    "log viewer"
  ],
  "activationEvents": [
    "onDebugAdapterProtocolTracker"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "saropaLogCapture.start",
        "title": "Saropa Log Capture: Start Capture",
        "icon": "$(play)"
      },
      {
        "command": "saropaLogCapture.stop",
        "title": "Saropa Log Capture: Stop Capture",
        "icon": "$(debug-stop)"
      },
      {
        "command": "saropaLogCapture.pause",
        "title": "Saropa Log Capture: Pause/Resume Capture",
        "icon": "$(debug-pause)"
      },
      {
        "command": "saropaLogCapture.open",
        "title": "Saropa Log Capture: Open Active Log File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "saropaLogCapture.openFolder",
        "title": "Saropa Log Capture: Open Log Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "saropaLogCapture.clear",
        "title": "Saropa Log Capture: Clear Current Session",
        "icon": "$(clear-all)"
      },
      {
        "command": "saropaLogCapture.delete",
        "title": "Saropa Log Capture: Delete Log File",
        "icon": "$(trash)"
      },
      {
        "command": "saropaLogCapture.insertMarker",
        "title": "Saropa Log Capture: Insert Marker",
        "icon": "$(horizontal-rule)"
      },
      {
        "command": "saropaLogCapture.refreshHistory",
        "title": "Refresh Session History",
        "icon": "$(refresh)"
      },
      {
        "command": "saropaLogCapture.openSession",
        "title": "Open Log File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "saropaLogCapture.deleteSession",
        "title": "Delete Log File",
        "icon": "$(trash)"
      },
      {
        "command": "saropaLogCapture.exportHtml",
        "title": "Export as HTML (Static)",
        "icon": "$(file-code)"
      },
      {
        "command": "saropaLogCapture.exportHtmlInteractive",
        "title": "Export as HTML (Interactive)",
        "icon": "$(browser)"
      },
      {
        "command": "saropaLogCapture.renameSession",
        "title": "Rename Session",
        "icon": "$(edit)"
      },
      {
        "command": "saropaLogCapture.tagSession",
        "title": "Tag Session",
        "icon": "$(tag)"
      },
      {
        "command": "saropaLogCapture.splitNow",
        "title": "Saropa Log Capture: Split Log File Now",
        "icon": "$(split-horizontal)"
      },
      {
        "command": "saropaLogCapture.searchLogs",
        "title": "Saropa Log Capture: Search Log Files",
        "icon": "$(search)"
      },
      {
        "command": "saropaLogCapture.copyDeepLink",
        "title": "Copy Deep Link",
        "icon": "$(link)"
      },
      {
        "command": "saropaLogCapture.applyPreset",
        "title": "Saropa Log Capture: Apply Filter Preset",
        "icon": "$(filter)"
      },
      {
        "command": "saropaLogCapture.savePreset",
        "title": "Saropa Log Capture: Save Current Filters as Preset",
        "icon": "$(save)"
      },
      {
        "command": "saropaLogCapture.toggleInlineDecorations",
        "title": "Saropa Log Capture: Toggle Inline Log Decorations",
        "icon": "$(symbol-event)"
      },
      {
        "command": "saropaLogCapture.compareSessions",
        "title": "Saropa Log Capture: Compare Sessions",
        "icon": "$(diff)"
      },
      {
        "command": "saropaLogCapture.markForComparison",
        "title": "Mark for Comparison",
        "icon": "$(bookmark)"
      },
      {
        "command": "saropaLogCapture.compareWithMarked",
        "title": "Compare with Marked Session",
        "icon": "$(diff)"
      },
      {
        "command": "saropaLogCapture.applyTemplate",
        "title": "Saropa Log Capture: Apply Session Template",
        "icon": "$(package)"
      },
      {
        "command": "saropaLogCapture.saveTemplate",
        "title": "Saropa Log Capture: Save Settings as Template",
        "icon": "$(save-as)"
      },
      {
        "command": "saropaLogCapture.exportCsv",
        "title": "Export as CSV",
        "icon": "$(file)"
      },
      {
        "command": "saropaLogCapture.exportJson",
        "title": "Export as JSON",
        "icon": "$(json)"
      },
      {
        "command": "saropaLogCapture.exportJsonl",
        "title": "Export as JSONL",
        "icon": "$(list-flat)"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "saropaLogCapture",
          "title": "Saropa Log Capture",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "saropaLogCapture": [
        {
          "type": "webview",
          "id": "saropaLogCapture.logViewer",
          "name": "Log Viewer",
          "icon": "$(output)"
        },
        {
          "id": "saropaLogCapture.sessionHistory",
          "name": "Session History",
          "icon": "$(history)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "saropaLogCapture.refreshHistory",
          "when": "view == saropaLogCapture.sessionHistory",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "saropaLogCapture.openSession",
          "when": "viewItem == session",
          "group": "inline"
        },
        {
          "command": "saropaLogCapture.deleteSession",
          "when": "viewItem == session"
        },
        {
          "command": "saropaLogCapture.exportHtml",
          "when": "viewItem == session"
        },
        {
          "command": "saropaLogCapture.exportHtmlInteractive",
          "when": "viewItem == session"
        },
        {
          "command": "saropaLogCapture.exportCsv",
          "when": "viewItem == session",
          "group": "export"
        },
        {
          "command": "saropaLogCapture.exportJson",
          "when": "viewItem == session",
          "group": "export"
        },
        {
          "command": "saropaLogCapture.exportJsonl",
          "when": "viewItem == session",
          "group": "export"
        },
        {
          "command": "saropaLogCapture.renameSession",
          "when": "viewItem == session"
        },
        {
          "command": "saropaLogCapture.tagSession",
          "when": "viewItem == session"
        },
        {
          "command": "saropaLogCapture.copyDeepLink",
          "when": "viewItem == session"
        },
        {
          "command": "saropaLogCapture.markForComparison",
          "when": "viewItem == session",
          "group": "compare"
        },
        {
          "command": "saropaLogCapture.compareWithMarked",
          "when": "viewItem == session",
          "group": "compare"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "saropaLogCapture.getStarted",
        "title": "Get Started with Log Capture",
        "description": "Learn how to capture and analyze your debug output with Saropa Log Capture.",
        "steps": [
          {
            "id": "saropaLogCapture.startDebugging",
            "title": "Start a Debug Session",
            "description": "Log capture starts automatically when you debug. Press **F5** or use the **Run and Debug** panel to start.\n\n[Start Debugging](command:workbench.action.debug.start)",
            "media": {
              "markdown": "media/walkthrough/start-debugging.md"
            },
            "completionEvents": [
              "onCommand:workbench.action.debug.start"
            ]
          },
          {
            "id": "saropaLogCapture.openViewer",
            "title": "Open the Log Viewer",
            "description": "Click the **Saropa Log Capture** icon in the Activity Bar to see live log output with colors, collapsible stacks, and search.\n\n[Open Log Viewer](command:saropaLogCapture.logViewer.focus)",
            "media": {
              "markdown": "media/walkthrough/open-viewer.md"
            },
            "completionEvents": [
              "onView:saropaLogCapture.logViewer"
            ]
          },
          {
            "id": "saropaLogCapture.useKeyboardShortcuts",
            "title": "Master Keyboard Shortcuts",
            "description": "Use **Space** to pause, **Ctrl+F** to search, **P** to pin lines, **N** to annotate, and **M** to insert markers.",
            "media": {
              "markdown": "media/walkthrough/keyboard-shortcuts.md"
            }
          },
          {
            "id": "saropaLogCapture.browseHistory",
            "title": "Browse Session History",
            "description": "All sessions are saved in the **Session History** tree. Right-click to rename, tag, export, or share deep links.\n\n[View Session History](command:saropaLogCapture.sessionHistory.focus)",
            "media": {
              "markdown": "media/walkthrough/session-history.md"
            },
            "completionEvents": [
              "onView:saropaLogCapture.sessionHistory"
            ]
          },
          {
            "id": "saropaLogCapture.configureSettings",
            "title": "Customize Your Setup",
            "description": "Configure watch patterns, highlight rules, exclusions, and split rules in **Settings**.\n\n[Open Settings](command:workbench.action.openSettings?%22saropaLogCapture%22)",
            "media": {
              "markdown": "media/walkthrough/configure-settings.md"
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "Saropa Log Capture",
      "properties": {
        "saropaLogCapture.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable automatic log capture during debug sessions."
        },
        "saropaLogCapture.categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "console",
            "stdout",
            "stderr"
          ],
          "description": "DAP output categories to capture. Common values: console, stdout, stderr, telemetry."
        },
        "saropaLogCapture.maxLines": {
          "type": "number",
          "default": 100000,
          "minimum": 1000,
          "description": "Maximum lines per log file. Oldest lines dropped when exceeded."
        },
        "saropaLogCapture.includeTimestamp": {
          "type": "boolean",
          "default": true,
          "description": "Prefix each captured line with a timestamp."
        },
        "saropaLogCapture.format": {
          "type": "string",
          "enum": [
            "plaintext",
            "html"
          ],
          "default": "plaintext",
          "description": "Output file format. Currently only plaintext is supported."
        },
        "saropaLogCapture.logDirectory": {
          "type": "string",
          "default": "reports",
          "description": "Directory for log files, relative to workspace root."
        },
        "saropaLogCapture.autoOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open the log file in the editor when a debug session ends."
        },
        "saropaLogCapture.maxLogFiles": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Maximum number of log files to retain. 0 = unlimited. Oldest deleted when exceeded."
        },
        "saropaLogCapture.gitignoreCheck": {
          "type": "boolean",
          "default": true,
          "description": "On first run, check if the log directory is in .gitignore and offer to add it."
        },
        "saropaLogCapture.captureAll": {
          "type": "boolean",
          "default": false,
          "description": "If true, capture all Debug Console output (no category or exclusion filtering). Overrides 'categories' and 'exclusions'."
        },
        "saropaLogCapture.redactEnvVars": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Environment variable name patterns to redact from context headers. Supports * wildcards (e.g. API_KEY, SECRET_*)."
        },
        "saropaLogCapture.exclusions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Patterns to exclude from the viewer. Plain strings match case-insensitively; /regex/ patterns are supported."
        },
        "saropaLogCapture.watchPatterns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "keyword": {
                "type": "string",
                "description": "Text or /regex/ pattern to watch for in log output."
              },
              "alert": {
                "type": "string",
                "enum": [
                  "flash",
                  "badge",
                  "none"
                ],
                "default": "flash",
                "description": "Alert type: flash (visual pulse), badge (sidebar count), none (counter only)."
              }
            },
            "required": [
              "keyword"
            ]
          },
          "default": [
            {
              "keyword": "error",
              "alert": "flash"
            },
            {
              "keyword": "exception",
              "alert": "flash"
            },
            {
              "keyword": "warning",
              "alert": "badge"
            }
          ],
          "description": "Keywords to watch for in log output. Each entry has a keyword (string or /regex/) and alert type."
        },
        "saropaLogCapture.showElapsedTime": {
          "type": "boolean",
          "default": false,
          "description": "Show elapsed time (+Nms) between consecutive log lines in the viewer."
        },
        "saropaLogCapture.showDecorations": {
          "type": "boolean",
          "default": false,
          "description": "Show decoration prefix (severity dot, counter, timestamp) on each log line in the viewer."
        },
        "saropaLogCapture.slowGapThreshold": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "description": "Elapsed time threshold (ms) for highlighting slow gaps between lines."
        },
        "saropaLogCapture.filterContextLines": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 50,
          "description": "Number of preceding lines to show (dimmed) when filtering by log level."
        },
        "saropaLogCapture.contextViewLines": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Number of lines before and after to show in the context view modal."
        },
        "saropaLogCapture.splitRules": {
          "type": "object",
          "properties": {
            "maxLines": {
              "type": "number",
              "minimum": 0,
              "default": 0,
              "description": "Split file after this many lines. 0 = disabled."
            },
            "maxSizeKB": {
              "type": "number",
              "minimum": 0,
              "default": 0,
              "description": "Split file after this size in KB. 0 = disabled."
            },
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Keywords that trigger a split (e.g., 'HOT RESTART', '/SPLIT/')."
            },
            "maxDurationMinutes": {
              "type": "number",
              "minimum": 0,
              "default": 0,
              "description": "Split file after this many minutes. 0 = disabled."
            },
            "silenceMinutes": {
              "type": "number",
              "minimum": 0,
              "default": 0,
              "description": "Split file after this many minutes of silence. 0 = disabled."
            }
          },
          "default": {
            "maxLines": 0,
            "maxSizeKB": 0,
            "keywords": [],
            "maxDurationMinutes": 0,
            "silenceMinutes": 0
          },
          "description": "Rules for automatically splitting log files. All values of 0 disable that rule."
        },
        "saropaLogCapture.autoTagRules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Text or /regex/ pattern to match against log lines."
              },
              "tag": {
                "type": "string",
                "description": "Tag to apply when pattern matches."
              }
            },
            "required": [
              "pattern",
              "tag"
            ]
          },
          "default": [],
          "description": "Rules for automatically tagging sessions based on content patterns."
        },
        "saropaLogCapture.highlightRules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Text or /regex/ pattern to match against log lines."
              },
              "color": {
                "type": "string",
                "description": "Text color (CSS color, hex, or VS Code CSS variable)."
              },
              "backgroundColor": {
                "type": "string",
                "description": "Background color (CSS color, hex, or VS Code CSS variable)."
              },
              "label": {
                "type": "string",
                "description": "Label shown in tooltips explaining the highlight."
              },
              "bold": {
                "type": "boolean",
                "default": false,
                "description": "Apply bold styling to matching lines."
              },
              "italic": {
                "type": "boolean",
                "default": false,
                "description": "Apply italic styling to matching lines."
              }
            },
            "required": [
              "pattern"
            ]
          },
          "default": [
            {
              "pattern": "/\\b(error|exception|fail(ed|ure)?|fatal)\\b/i",
              "color": "var(--vscode-errorForeground)",
              "label": "Error"
            },
            {
              "pattern": "/\\b(warn(ing)?|caution)\\b/i",
              "color": "var(--vscode-editorWarning-foreground)",
              "label": "Warning"
            },
            {
              "pattern": "/\\b(success|passed|ok)\\b/i",
              "color": "var(--vscode-debugConsole-sourceForeground)",
              "label": "Success"
            }
          ],
          "description": "Pattern-based highlighting rules for coloring log lines. Each rule specifies a pattern and visual styling."
        },
        "saropaLogCapture.filterPresets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the preset."
              },
              "categories": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "DAP categories to show (empty = all)."
              },
              "searchPattern": {
                "type": "string",
                "description": "Search pattern to apply (string or /regex/)."
              },
              "exclusionsEnabled": {
                "type": "boolean",
                "description": "Whether exclusions should be enabled."
              }
            },
            "required": [
              "name"
            ]
          },
          "default": [],
          "description": "Saved filter presets for quick application. Each preset saves category filters, search pattern, and exclusion state."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
